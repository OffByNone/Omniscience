{
	"author": "OffByNone",
	"contributors": [
		"seandulin"
	],
	"title": "Omniscience",
	"name": "omniscience",
	"description": "Finds UPnP devices on the local network",
	"icon": "./data/icons/logo_32.png",
	"version": "0.8.0",
	"main": "./bin/Firefox_Background.js",
	"bugs": {
		"url": "https://github.com/OffByNone/Omniscience/issues"
	},
	"id": "Omniscience@OffByNone",
	"license": "GNU GPL v3",
	"repository": {
		"url": "https://github.com/OffByNone/Omniscience.git",
		"type": "git"
	},
	"engines": {
		"Firefox": ">=38.0a1",
		"Fennec": ">=38.0a1"
	},
	"devDependencies": {
		"browserify": "^11.0.1",
		"babel": "^5.8.21",
		"babelify": "^6.2.0",
		"eslint": "^1.2.1",
		"jasmine": "^2.3.2",
		"jpm": "^1.0.1",
		"jpm-mobile": "^0.0.5"
	},
	"dependencies": {
		"omniscience-networking": "offbynone/omniscience-networking",
		"omniscience-sdk-resolver": "offbynone/omniscience-sdk-resolver",
		"omniscience-upnp": "offbynone/omniscience-upnp",
		"omniscience-utilities": "offbynone/omniscience-utilities"
	},
	"scripts": {
		"build:data:services": "./node_modules/.bin/babel ./data/Services -o ./data/bin/Services.js -s",
		"build:data:controllers": "./node_modules/.bin/babel ./data/Controllers -o ./data/bin/Controllers.js -s",
		"build:data": "npm run build:data:services & npm run build:data:controllers",
		
		"build:chrome:background": "./node_modules/.bin/browserify ./lib/Background/Chrome.js --im -t babelify -o ./bin/Chrome_Background.js",
		"build:chrome": "npm run build:chrome:background & npm run build:data",
		
		"build:cordova:background": "./node_modules/.bin/browserify ./lib/Background/Cordova.js --im -t babelify -o ./bin/Cordova_Background.js",
		"build:cordova": "npm run build:cordova:background & npm run build:data",
		
		"build:firefox:background": "./node_modules/.bin/babel ./lib/Background/Firefox.js -o ./bin/Firefox_Background.js -s",
		"build:firefox:comproot": "./node_modules/.bin/babel ./lib/CompositionRoot.js -o ./bin/CompositionRoot.js -s",
		"build:firefox:feb": "./node_modules/.bin/babel ./lib/FrontEndBridge.js -o ./bin/FrontEndBridge.js -s",
		"build:firefox:lib": "babel ./lib/Firefox -d ./bin/Firefox -s",
		"build:firefox": "npm run build:firefox:background & npm run build:firefox:comproot & npm run build:firefox:feb & npm run build:firefox:lib",
		
		"build": "npm run build:data & npm run build:chrome:background & npm run build:cordova:background & npm run build:firefox",
		"post": "./node_modules/.bin/jpm post --post-url=http://127.0.0.1:7999",
		"buildpost": "npm run build:firefox && npm run post",
		
		"lint": "./node_modules/.bin/eslint",
		"test": "./node_modules/.bin/jasmine",
		"install": "npm run build",
		"xpi": "npm install && npm run build:firefox && ./node_modules/.bin/jpm xpi"
	}
}