{
	"name": "Omniscience",
	"description": "Finds UPnP devices on the local network",
	"version": "0.5.0",
	"manifest_version": 2,
	"app": {
		"background": { "scripts": [ "./bin/libs/Chrome_Require.js" ] }
	},
	"permissions": [
		"http://*/",
		"notifications",
		"storage",
		"system.network",
		"fileSystem"
	],
	"sockets": {
		"tcpServer": { "listen": [ "*" ] },
		"tcp": { "connect": "*" },
		"udp": {
			"bind": "*",
			"send": "*",
			"multicastMembership": ""
		}
	},
	"icons": { "64": "./data/icons/logo_64.png" }
}